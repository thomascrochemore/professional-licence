<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.pool_size">1</property>
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCachingRegionFactory</property>

        <mapping class="com.api.p52.model.Activity"/>
        <mapping class="com.api.p52.model.Property"/>
        <mapping class="com.api.p52.model.Session"/>
        <mapping class="com.api.p52.model.SessionProperty"/>
        <mapping class="com.api.p52.model.User"/>

    </session-factory>
</hibernate-configuration>
