<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dateListActivitySessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonSeeSessionFromActivitySessions"
        android:layout_alignParentStart="true"
        android:text="TextView" />
    <TextView
        android:id="@+id/activityListActivitySessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <Button
        android:id="@+id/buttonSeeSessionFromActivitySessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:text="@string/see_session"
        android:textSize="12sp" />
</RelativeLayout>