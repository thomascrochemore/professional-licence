<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewCreateActivityNomActivity"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewCreateActivityNomActivity"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/icons8_move" />

    <ListView
        android:id="@+id/listAddPropertiesActivity"
        android:layout_width="fill_parent"
        android:layout_height="387dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonCreateActivityActivity"
        android:layout_marginTop="22dp" />
    <EditText
        android:id="@+id/editTextCreateActivityNomActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCreateActivityNomActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/textViewCreateActivityNomActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="43dp"
        android:text="@string/nom_activity" />
    <Button
        android:id="@+id/buttonCreateActivityActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextCreateActivityNomActivity"
        android:layout_below="@+id/editTextCreateActivityNomActivity"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:onClick="addProperty"
        android:text="@string/create_object" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonAddPropertyActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonCreateActivityActivity"
        android:layout_alignEnd="@+id/editTextCreateActivityNomActivity"
        android:clickable="true"
        app:srcCompat="@drawable/icons8_plus" />
</RelativeLayout>