<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thomas.p54_mobile">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/favicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.guest.MenuActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.user.account.AccountActivity"
            android:label="@string/app_name_user"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.user.account.AllUsersActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_all_users">
        </activity>
        <activity
            android:name=".view.user.account.UserAccountActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_user_account">
        </activity>

        <activity
            android:name=".view.user.activities.AllActivitiesActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_all_activities">
        </activity>
        <activity
            android:name=".view.user.activities.CreateActivityActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_create_activity">
        </activity>
        <activity
            android:name=".view.user.activities.SeeActivityActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_see_activity">
        </activity>

        <activity
            android:name=".view.user.sessions.CreateSessionActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_create_session">
        </activity>
        <activity
            android:name=".view.user.sessions.MySessionsActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_my_sessions">
        </activity>
        <activity
            android:name=".view.user.sessions.SeeSessionActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_see_session">
        </activity>
        <activity
            android:name=".view.user.sessions.UserSessionsActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_user_sessions">
        </activity>
        <activity
            android:name=".view.user.sessions.ActivitySessionsActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_activity_sessions">
        </activity>
        <activity
            android:name=".view.user.sessions.ModifySessionActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_modify_session">
        </activity>
    </application>
</manifest>